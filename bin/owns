#!/usr/bin/perl
use strict;
use warnings;

if (defined $ARGV[0]) {
    if (@ARGV == 1) {
        # get owner
        my $owner = `yaourt -Qoq $ARGV[0]`;
        # get owner's info if found
        exec "yaourt -Qi $owner" unless ${^CHILD_ERROR_NATIVE};
    } else {
        # list owner of each file
        exec "yaourt -Qo @ARGV";
    }
} else {
    die "$0: no package(s) specified\n";
}
