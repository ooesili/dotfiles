#!/usr/bin/env perl
use strict; use warnings;
use File::Spec;
use File::Basename;

# error reporting function
sub errx {
    my $code = shift;
    my $mesg = shift;
    warn "$0: $mesg\n";
    exit($code);
}

# check number of arguments
$0 = basename $0;
&errx(1, "requires one argument") if @ARGV != 1;

# set wallpaper
my $img = $ARGV[0];
if (-f $img) {
    my $abs = File::Spec->rel2abs($img);
    exec "feh --bg-fill $abs";
}
else {
    &errx(2, "file does not exist");
}
