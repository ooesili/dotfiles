client.focused          #eee8d5 #859900 #fdf6e3 #eee8d5
client.focused_inactive #839496 #586e75 #eee8d5 #484e50
client.unfocused        #586e75 #073642 #839496 #292d2e
client.urgent           #839496 #dc322f #fdf6e3 #900000
#client.placeholder      #000000 #0c0c0c #ffffff #000000

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command $HOME/.i3/conky-i3bar
    position top
    colors {
        background #002b36
        statusline #93a1a1
        separator #586e75
        focused_workspace #eee8d5 #859900 #fdf6e3
        inactive_workspace #839496 #586e75 #fdf6e3
        urgent_workspace #839496 #dc322f #fdf6e3
    }
}
